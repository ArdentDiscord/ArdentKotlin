{{> header.hbs }}
{{#if showSnackbar}}
    <a href="#" style="margin: 50px auto 0 auto; width: 75%; display: block;"
       class="button special small">{{snackbarMessage}}</a>
{{/if}}
<!-- Main -->
<section id="main" class="container 75%" xmlns="http://www.w3.org/1999/html">
    <header>
        <h2>Web Panel</h2>
        <p>Welcome, {{user.name}}! Only servers where you have the <b>Manage Server</b> permission will be shown</p>
    </header>
    {{#if isAdmin}}
        <div class="box">
            <h3 style="color: red;">Admin Zone</h3>
            <p>Cool, you're an administrator. Go <a href="/administrators">here</a> to do administrator shit</p>
        </div>
    {{/if}}
    {{#each availableGuilds}}
        <div class="box">
            <h3 style="display: inline-block;">{{name}}</h3>
            <br/>
            <p>Manage it by clicking <b><a href="/manage/{{id}}">here</a></b><br/>
                Owner: <b>{{owner.user.name}}#{{owner.user.discriminator}}</b></p>
        </div>
    {{/each}}
</section>

{{> footer.hbs }}