{{> header.hbs }}
{{#if showSnackbar}}
    <a href="#" style="margin: 50px auto 0 auto; width: 75%; display: block;"
       class="button special small">{{snackbarMessage}}</a>
{{/if}}
<!-- Main -->
<section id="main" class="container 75%" xmlns="http://www.w3.org/1999/html">
    <header>
        <h2>{{languageData.readable}} | Proofreading</h2>
    </header>
    {{#each proofed}}
        <div class="box">
            <h4>{{phrase}}</h4>
            <p style="display: inline-block;"><a href="/translation/ar/{{languageData.code}}/view/{{original.encoded}}">Click here to edit phrase {{@index_1}}</a></p>
        </div>
    {{/each}}
</section>

{{> footer.hbs }}